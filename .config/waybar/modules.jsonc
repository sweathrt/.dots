{
    "hyprland/window": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/hypr-app_name.sh",
        "separate-outputs": true,
        "max-length": 30
    },
    "wlr/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            // "1": "",
            // "2": "",
            // "3": "",
            // "4": "",
            // "5": "",
            "urgent": "",
            "active": "",
            "default": ""
        },
        "sort-by-number": true
    },
    "custom/updates": {
        "exec": "checkupdates | wc -l",
        "interval": 7200,
        "format": "󰏗  {}"
    },
    "custom/language": {
        "format": "  {}",
        "exec": "~/.config/waybar/scripts/hypr-kb_layout.sh",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next; pkill -SIGRTMIN+2 waybar",
        "signal": 2,
        "interval": "once",
        "tooltip": false
    },
    "custom/weather": {
        "tooltip" : true,
        "format" : "{}",
        "restart-interval" : 300,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },
    // "custom/window": {
    //     "format": "{}",
    //     "exec": "~/.config/waybar/scripts/hypr-app_name.sh",
    //     "signal": 1,
    //     "interval": "once",
    //     "tooltip": false
    // },
    "tray": {
        "icon-size": 13,
        "tooltip": false,
        "spacing": 10
    },
    "clock": {
        "format": "{:  %a %b %d %R}",
        "format-alt": "{:  %R    %d/%m}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
        // "calendar": {
        //             "mode"          : "year",
        //             "mode-mon-col"  : 3,
        //             "weeks-pos"     : "right",
        //             "on-scroll"     : 1,
        //             "on-click-right": "mode",
        //             "format": {
        //                       "months":     "<span color='#ffead3'><b>{}</b></span>",
        //                       "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        //                       "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
        //                       "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        //                       "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
        //                       }
        //             }
    },
    "battery": {
        "bat": "BAT0",
        "full-at": 99,
        "interval": 60,
        "states": {
            "full": 100, 
            "ninety": 90,
            "eighty": 80,
            "seventy": 70,
            "sixty": 60,
            "fifty": 50,
            "fourty": 40,
            "thirty": 30,
            "twenty": 20,
            "ten": 10
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["  ", "  ", "  ", "  ", "  ", "  ", "  ", "  ", "  ", "  ", "  "],
        // "format-icons": ["", "", "", "", "", "", "", "", "", ""],
        "format-charging-ten": "   {capacity}%",
        "format-charging-twenty": "   {capacity}%",
        "format-charging-thirty": "   {capacity}%",
        "format-charging-fourty": "   {capacity}%",
        "format-charging-fifty": "   {capacity}%",
        "format-charging-sixty": "   {capacity}%",
        "format-charging-seventy": "   {capacity}%",
        "format-charging-eighty": "   {capacity}%",
        "format-charging-ninety": "   {capacity}%",
        "format-charging-full": "   Full",
        "format-plugged-ten": " {capacity}%",
        "format-plugged-twenty": " {capacity}%",
        "format-plugged-thirty": " {capacity}%",
        "format-plugged-fourty": " {capacity}%",
        "format-plugged-fifty": " {capacity}%",
        "format-plugged-sixty": " {capacity}%",
        "format-plugged-seventy": " {capacity}%",
        "format-plugged-eighty": " {capacity}%",
        "format-plugged-ninety": " {capacity}%",
        "format-plugged-full": " Full",
        "max-length": 25
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "{icon} {essid}",
        "format-disconnected": "󰤮 ",
        "format-icons": [ "󰤟 ", "󰤢 ", "󰤥 ", "󰤨 " ],
        "format-ethernet": "󰈁 {ipaddr}/{cidr}",
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "󰖩   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "  Muted",
        "on-click": "wpctl set-mute 52 toggle",
        "on-scroll-up": "wpctl set-volume 52 5%+",
        "on-scroll-down": "wpctl set-volume 52 5%-",
        "scroll-step": 5,
        "format-icons": {
            "headphone": " ",
            "hands-free": " ",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": [" ", " ", " "]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "tooltip": false,
        "format-source": " {volume}%",
        "format-source-muted": "  Muted",
        "on-click": "wpctl set-mute 53 toggle",
        "on-scroll-up": "wpctl set-volume 53 5%+",
        "on-scroll-down": "wpctl set-volume 53 5%-",
        "scroll-step": 5
    },
    "mpris": {
        "format": "{player_icon} {artist} - {title}",
        "format-paused": "{status_icon} <i>{artist} - {title}</i>",
        "max-length": 30,
        "player-icons": {
            "default": "▶",
            "mpv": "🎵"
        },
        "status-icons": {
            "paused": "⏸"
        },
        "ignored-players": ["firefox"]
    },
    "disk": {
        "interval": 30,
        "format": "󰋊  {free} free",
        "path": "/"
    },
    "cpu": {
        "interval": 10,
        "format": "󰘚  {usage}%",
        "max-length": 10,
        "on-click": ""
    },
    "memory": {
        "interval": 30,
        "format": "󰍛  {}%",
        "format-alt": "󰍛  {used:0.1f}G / {total:0.1f}G",
        "max-length": 10
    }
}
